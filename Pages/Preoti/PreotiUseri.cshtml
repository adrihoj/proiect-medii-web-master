@page
@model Proiect.Pages.Preoti.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h1>Lista cu preotii disponibili</h1>


<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Preot[0].Nume)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Preot[0].Prenume)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Preot[0].DataNasterii)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Preot)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Nume)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Prenume)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.DataNasterii)
                </td>
                <td>
                    <a asp-page="./Details" asp-route-id="@item.ID">Details</a> |
                </td>
            </tr>
        }
    </tbody>
</table>
