@page
@model Proiect.Pages.Servicii.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h1>Lista servicii disponibile</h1>


<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Serviciu[0].NumeServiciu)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Serviciu[0].DurataServiciu)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Serviciu[0].PretServiciu)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Serviciu)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.NumeServiciu)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.DurataServiciu)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.PretServiciu)
                </td>
                <td>
                    
                    <a asp-page="./Details" asp-route-id="@item.ID">Details</a> |
                </td>
            </tr>
        }
    </tbody>
</table>
