<!DOCTYPE html>
<html lang="en">




<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Proiect</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Proiect.styles.css" asp-append-version="true" />



    <style>
        body {
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            background-color: #343a40; /* Dark background */
            color: #333; /* Dark text color */
        }

        header {
            background-color: #343a40; /* Dark background for the header */
            color: #fff; /* Light text color for the header */
            padding: 10px 0;
        }

        .navbar {
            background-color: wheat; /* Dark background for the navbar */
            border-bottom: 1px solid #343a40; /* Border color */
        }



            .navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3 {
                color: black;
            }

        .navbar-nav {
            margin-left: auto; /* Align navigation items to the right */
            border-radius: 5px;
        }

        .nav-item {
            margin-right: 15px; /* Adjust spacing between navigation items */
        }

        .nav-link {
            font-size: 1.2em; /* Adjust font size */
            color: #fff; /* White text color for links */
        }

            .nav-link:hover {
                background-color: #2c3036; /* Darker background on hover */
            }

        .container {
            background-color: #fff; /* White background for the content */
            border-radius: 5px;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1); /* Subtle box shadow for the content */
            margin-top: 20px;
            padding: 20px;
        }

        a {
            color: gray; /* Blue color for links */
        }

            a:hover {
                color: darkgrey; /* Darker blue color on hover */
            }
    </style>
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container">
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-page="/Index">Home</a>
                        </li>
                        

                        @if (User.IsInRole("Admin"))
                        {
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-area="" asp-page="Enoriasi/Index">Enorias</a>
                            </li>
                        }
                       

                        @if (User.IsInRole("Admin"))
                        {
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-area="" asp-page="Programari/Index">Programari</a>
                            </li>
                        }
                       

                        @if (User.IsInRole("Admin"))
                        {
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-area="" asp-page="Biserici/Index">Biserici</a>
                            </li>
                        }
                        
                        @if (User.IsInRole("Admin"))
                        {
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-area="" asp-page="Preoti/Index">Preoti</a>
                            </li>
                        }
                       

                        @if (User.IsInRole("Admin"))
                        {
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-area="" asp-page="Servicii/Index">Servicii</a>
                            </li>
                        }
                       

                        @if (User.IsInRole("User"))
                        {
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-area="" asp-page="Servicii/ServiciiUseri">Lista servicii</a>
                            </li>
                        }

                        @if (User.IsInRole("User"))
                        {
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-area="" asp-page="Biserici/BisericiUseri">Lista biserici</a>
                            </li>
                        }

                        @if (User.IsInRole("User"))
                        {
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-area="" asp-page="Preoti/PreotiUseri">Lista preoti</a>
                            </li>
                        }


                        @if (User.IsInRole("User"))
                        {
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-area="" asp-page="Programari/Index">Programeaza-te</a>
                            </li>
                        }

                    </ul>
                    <partial name="_LoginPartial" />
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

  

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>